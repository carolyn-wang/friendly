<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Friendly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        Default font-->
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/fontSizeSmall</item>
<!--        Button Styling-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleFont">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontWeight">800</item>
        <item name="android:paddingBottom">@dimen/paddingMedium</item>
    </style>

    <style name="TitleFont.Big">
        <item name="android:textSize">@dimen/fontSizeBig</item>
    </style>

    <style name="TitleFont.Medium">
        <item name="android:textSize">@dimen/fontSizeMedium</item>
    </style>

    <dimen name="fontSizeSmall">18dp</dimen>
    <dimen name="fontSizeMedium">20dp</dimen>
    <dimen name="fontSizeBig">25dp</dimen>
    <dimen name="paddingMedium">16dp</dimen>

    <style name="CardView.Poll" parent="CardView">
        <item name="android:layout_margin">@dimen/poll_card_margin</item>
        <item name="cardCornerRadius">@dimen/poll_card_radius</item>
        <item name="cardElevation">@dimen/poll_card_elevation</item>
    </style>

    <dimen name="poll_card_margin">10dp</dimen>
    <dimen name="poll_card_radius">16dp</dimen>
    <dimen name="poll_card_elevation">8dp</dimen>
</resources>